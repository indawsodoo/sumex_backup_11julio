<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <record id="view_res_config_settings_new_user_form" model="ir.ui.view">
            <field name="name">res.config.settings.form</field>
            <field name="model">res.config.settings</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
               <xpath expr="//div[@id='website_selection_settings']" position="after">
	            	<h2>New User Approval Notification Settings</h2>
	            	 <div class="row mt16 o_settings_container">
		            	<div class="12 col-md-6 o_setting_box">
		                    <div class="o_setting_right_pane"> 
			                    <group  col="2">
		                            <field name="email_notification" string="To whom(at admin side) you want to get notified at new Sign-Up?" style="width:200px;"/>
		                            <field name="is_email_validation" string="Email Link Varification for New User Sign Up ?"/>
			                    </group>
		               	     </div> 
		               	 </div>   
		            </div>     
                </xpath>
            </field>
        </record>
    </data>
</odoo>
