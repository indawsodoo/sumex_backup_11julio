	<template id="custom_product_price_for_cart" inherit_id="website_sale.total" priority="300">
        <xpath expr="//tr[@id='order_total_untaxed']//td[2]//span" position="attributes">
           <attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
        </xpath>
		<xpath expr="//tr[@id='order_total_taxes']//td[2]//span" position="attributes">
           <attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
        </xpath>
		<xpath expr="//tr[@id='order_total']//td[2]" position="attributes">
           <attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
        </xpath>
    </template>

	<template id="custom_product_price_ept" inherit_id="website_sale.product_price" priority="300">
        <xpath expr="//div[hasclass('product_price')]" position="attributes">
           <attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
        </xpath>
    </template>

	<template id="custom_products_item" inherit_id="website_sale.products_item" priority="300">
		<xpath expr="//div[hasclass('product_price')]" position="attributes">
			<attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
		</xpath>
		<xpath expr="//div[hasclass('o_wsale_product_btn')]" position="attributes">
			<attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
		</xpath>
	</template>

	<template id="products_indaws_plus_minus_template_inherit" inherit_id="indaws_affinity_e_commerce_mvp_payment.products_indaws_plus_minus_template" priority="300">
		<xpath expr="//div[hasclass('css_quantity')]" position="attributes">
			<attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
		</xpath>
	</template>

	<template id="custom_header_cart_link" inherit_id="website_sale.header_cart_link" priority="300">
        <xpath expr="//li[contains(@t-attf-class, 'o_wsale_my_cart')]" position="attributes">
            <attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
        </xpath>
    </template>

