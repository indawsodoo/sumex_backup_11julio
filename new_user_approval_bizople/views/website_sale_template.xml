	<template id="products_item_addtocart" inherit_id="website_sale.product">
		<xpath expr="//a[@id='add_to_cart']" position="attributes">
			<attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
		</xpath>
		<xpath expr="//div[hasclass('js_product')]" position="attributes">
			<attribute name="t-if">
				uid and uid &gt; 0
			</attribute>
		</xpath>
		<xpath expr="//div[@id='product_details']/h1" position="after">
			<div t-if="website.user_id == user_id">
				<div class="alert alert-danger text-center alert-dismissible"
					role="alert">
					<button type="button" class="close fa fa-times" data-dismiss="alert" aria-label="Close">
					<span aria-hidden="true"></span>
				</button>
					<a href="/web/login" class="alert-link">
						<strong>Please Login</strong>
						to see Product Price
					</a>
				</div>
			</div>
		</xpath>
	</template>

	<template id="add_to_wishlist_inherit" inherit_id="website_sale_wishlist.add_to_wishlist">
		<xpath expr="//button[hasclass('o_add_wishlist')]" position="replace">
			<button t-if="product_variant_id and uid and uid &gt; 0" type="button" role="button" class="btn btn-secondary o_add_wishlist" t-att-disabled='in_wish or None' title="Add to Wishlist" t-att-data-product-template-id="product.id" t-att-data-product-product-id="product_variant_id" data-action="o_wishlist"><span class="fa fa-heart" role="img" aria-label="Add to wishlist"></span></button>
		</xpath>
    </template>
</odoo>
