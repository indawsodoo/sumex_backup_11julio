<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sumex_apps_imports_csv_view_inherit_partner_search" model="ir.ui.view">
        <field name="name">sumex_apps_imports_csv_view_inherit_partner_search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Creado por Sumex_apps_imports - SÍ" name="_created_from_sumex_apps_imports_csv_yes" domain="[('_created_from_sumex_apps_imports_csv','!=',False)]"/>
                <filter string="Creado por Sumex_apps_imports - NO" name="_created_from_sumex_apps_imports_csv_no" domain="[('_created_from_sumex_apps_imports_csv','=',False)]"/>
            </xpath>
        </field>
    </record>

    <record id="sumex_apps_imports_csv_view_inherit_partner_tree" model="ir.ui.view">
        <field name="name">sumex_apps_imports_csv_view_inherit_partner_tree</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">

            <field name='display_name' position="after">
                <field name="_created_from_sumex_apps_imports_csv" readonly="1" optional="hide"/>
            </field>

        </field>
    </record>

    <record id="sumex_apps_imports_csv_view_inherit_partner_form" model="ir.ui.view">
        <field name="name">sumex_apps_imports_csv_view_inherit_partner_form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <field name='vat' position="after">
                    <field name="_created_from_sumex_apps_imports_csv" readonly="1"/>
            </field>

        </field>
    </record>

</odoo>
