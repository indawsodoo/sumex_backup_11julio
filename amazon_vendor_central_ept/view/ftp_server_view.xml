<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="amz_vendor_ftp_server_ept" model="ir.ui.view">
            <field name="name">File Server</field>
            <field name="model">ftp.server.ept</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Ftp Server">
                    <field name="name"/>
                    <field name="ftp_host"/>
                    <field name="server_type"/>
                </tree>
            </field>
        </record>
        <record id="amz_vendor_ftp_server_form_view_ept" model="ir.ui.view">
            <field name="name">File Server</field>
            <field name="model">ftp.server.ept</field>
            <field name="type">form</field>
            <field name="priority">15</field>
            <field name="arch" type="xml">
                <form string="File Server">
                    <header>
                        <button name="do_test" class="oe_highlight"
                                string="Test Connection" type="object"/>
                        <button name="add_directory" class="oe_highlight"
                                string="Load Directory List" type="object"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="buttons">
                            <field name="is_production_environment" invisible="1"/>
                            <button attrs="{'invisible': [('is_production_environment', '=', False)]}"
                                    class="oe_stat_button" name="toggle_prod_environment_value"
                                    type="object" icon="fa-play">
                                <div class="o_stat_info o_form_field">
                                    <span class="text-success">Production</span>
                                    <span class="o_stat_text">Environment</span>
                                </div>
                            </button>
                            <button attrs="{'invisible': [('is_production_environment', '=', True)]}"
                                    class="oe_stat_button" name="toggle_prod_environment_value"
                                    type="object" icon="fa-stop">
                                <div class="o_stat_info o_form_field">
                                    <span class="o_warning_text">Test</span>
                                    <span class="o_stat_text">Environment</span>
                                </div>
                            </button>
                        </div>
                        <group string="Server Info">
                            <group>
                                <field name="name"/>
                                <field name="ftp_host"/>
                                <field name="ftp_port"/>
                                <field name="ftp_username"/>
                                <field name="key_filename" attrs="{'invisible':[('conn_type','!=','sftp')]}"/>
                            </group>
                            <group>
                                <field name="server_type"/>
                                <field name="conn_type" invisible="1"/>
                                <field name="is_sftp_passphrase_password" string="Passphrase Password"
                                       widget="boolean_toggle"/>
                                <field name="ftp_password" password="1"
                                       attrs="{'required':['|', ('conn_type','=','ftp'), ('is_sftp_passphrase_password', '=', True)],
                                    'invisible': [('is_sftp_passphrase_password', '=', False)]}"/>
                            </group>
                        </group>
                        <group string="Vender Central Configurations">
                            <group>
                                <field name="ftp_type"/>
                                <field name="po_file_import_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'receiver')]}"/>
                                <field name="po_ack_file_export_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="inventory_file_export_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="invoice_file_export_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="asn_file_export_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="sales_report_file_export_prefix"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="default_upload_dir_id"
                                       attrs="{'invisible': [('ftp_type', '!=', 'sender')]}"/>
                                <field name="default_receive_dir_id"
                                       attrs="{'invisible': [('ftp_type', '!=', 'receiver')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- -search view of sale requisition -->
        <record id="avc_ftp_server_ept_search_view" model="ir.ui.view">
            <field name="name">avc.ftp.server.ept.search.view</field>
            <field name="model">ftp.server.ept</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search string="Search Instance">
                    <field name="name" string="Server Name"/>
                    <field name="ftp_username" string="FTP Username"/>
                    <separator/>
                    <filter string="Default Download Path" name="default_receive_dir_id"
                            domain="[('default_receive_dir_id','!=', False)]"/>
                    <filter string="Default Upload Path" name="default_upload_dir_id"
                            domain="[('default_upload_dir_id','!=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="FTP Type" name="FTP Type" domain="[]"
                                context="{'group_by':'ftp_type'}"/>
                        <filter string="Server Type" name="Server Type" domain="[]"
                                context="{'group_by':'server_type'}"/>
                    </group>
                    <separator/>
                </search>
            </field>
        </record>

        <record id="action_vendor_ftp_details_ept" model="ir.actions.act_window">
            <field name="name">FTP Details</field>
            <field name="res_model">ftp.server.ept</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="amazon_vendor_central_ept.avc_ftp_server_ept_search_view"/>
        </record>

        <record model="ir.actions.act_window.view" id="amz_vendor_ftp_server_action_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="amz_vendor_ftp_server_ept"/>
            <field name="act_window_id" ref="action_vendor_ftp_details_ept"/>
        </record>
        <record model="ir.actions.act_window.view" id="amz_vendor_ftp_server_action_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="amz_vendor_ftp_server_form_view_ept"/>
            <field name="act_window_id" ref="action_vendor_ftp_details_ept"/>
        </record>

    </data>
</odoo>
