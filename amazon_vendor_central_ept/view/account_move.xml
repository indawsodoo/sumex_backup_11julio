<odoo>
    <data>
        <!--Add button Export EDI Invoice in account invoice -->
        <record id="view_invoice_amazon_edi_section" model="ir.ui.view">
            <field name="name">account.move.form.view.with_amazon_edi_detail
            </field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='team_id']" position="after">
                        <field name="is_amazon_edi_invoice" readonly="1"
                               attrs="{'invisible': [('is_amazon_edi_invoice','!=',True)]}"/>
                        <field name="exported_to_edi" readonly="1"
                               attrs="{'invisible': [('is_amazon_edi_invoice','!=',True)]}"/>
                    </xpath>
                </data>
            </field>
        </record>

         <record id="view_invoice_amazon_edi_tree" model="ir.ui.view">
            <field name="name">account.move.tree.view.with_amazon_edi_detail
            </field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='payment_state']" position="after">
                        <field name="is_amazon_edi_invoice" invisible="0"/>
                    </xpath>
                </data>
            </field>
        </record>

        <!--Action to display invoices-->
        <record id="action_avc_invoices" model="ir.actions.act_window">
            <field name="name">Invoices</field>
            <field name="res_model">account.move</field>
            <field name="domain">[('move_type', '=', 'out_invoice'), ('is_amazon_edi_invoice', '!=', False)]
            </field>
            <field name="context">{'default_type': 'out_invoice', 'move_type': 'out_invoice', 'journal_type': 'sale',
                                   'create': False}
            </field>
            <field name="search_view_id" ref="account.view_account_invoice_filter"/>
        </record>

        <menuitem id="menu_avc_invoices" name="Invoices"
                  parent="menu_avc_sale_order" sequence="5" action="action_avc_invoices"/>
    </data>
</odoo>
