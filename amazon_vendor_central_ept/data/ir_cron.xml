<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Import Purchase order from the directory-->
        <record id="ir_cron_avc_edi_auto_import_po" model="ir.cron">
            <field name="name">Amazon Vendor Central: Import Purchase Orders(Do Not Delete)</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">2</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="amazon_vendor_central_ept.model_amazon_vendor_instance"/>
            <field name="state">code</field>
            <field name="code">model.sync_amazon_po_from_cron()</field>
        </record>
        <!--Export Inventory in the Directory-->
        <record id="ir_cron_inventory_and_cost_export" model="ir.cron">
            <field name="name">Amazon Vendor Central: Export Inventory(Do Not Delete)</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="amazon_vendor_central_ept.model_amazon_vendor_instance"/>
            <field name="state">code</field>
            <field name="code">model.export_inventory_and_cost_from_cron()</field>
        </record>

        <!--Export Advance Shipment Notice to the vendor central -->
        <record id="ir_cron_advance_shipment_notice_export" model="ir.cron">
            <field name="name">Amazon Vendor Central: Export Advance Shipment Notice - 856 (Do Not Delete)</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="amazon_vendor_central_ept.model_amazon_vendor_instance"/>
            <field name="state">code</field>
            <field name="code">model.export_advance_shipment_notices_from_cron()</field>
        </record>

        <!--Export Invoices to the vendor central -->
        <record id="ir_cron_invoices_export" model="ir.cron">
            <field name="name">Amazon Vendor Central: Export Invoices - 856 (Do Not Delete)</field>
            <field name="active" eval="False"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">7</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="amazon_vendor_central_ept.model_amazon_vendor_instance"/>
            <field name="state">code</field>
            <field name="code">model.export_invoices_from_cron()</field>
        </record>
    </data>
</odoo>
