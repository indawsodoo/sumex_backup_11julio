<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Sale Order Inherted -->
        <record id="view_sale_order_form_z" model="ir.ui.view">
            <field name="name">sale.order.form.z</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="priority" eval="8" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="is_value_percent" invisible="1"/>
                    <field name="deposit_calc" attrs="{'invisible': [('is_value_percent','!=', 1)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
