<?xml version="1.0"?>
<odoo>

    <!-- Tree View-->
    <record id="sumex_photostock_manuales_tree_view" model="ir.ui.view">
        <field name="name">sumex_photostock_manuales_tree_view</field>
        <field name="model">sumex.photostock_manuales</field>
        <field name="groups_id" eval="[(6, 0, [ref('odoo14_sumex_apps_photostock.module_photostock_admin') ])]"/>
        <field name="arch" type="xml">

            <tree>
                <field name="name"/>
                <field name="file"/>
            </tree>

        </field>
    </record>

   
   <!-- Form View-->
    <record id="sumex_photostock_manuales_form_view" model="ir.ui.view">
        <field name="name">sumex_photostock_manuales_form_view</field>
        <field name="model">sumex.photostock_manuales</field>
        <field name="groups_id" eval="[(6, 0, [ref('odoo14_sumex_apps_photostock.module_photostock_admin') ])]"/>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <label for="name" class="o_form_label" string="name"/>
                    <field name="name" string="name"/>
                    <label for="file" class="o_form_label" string="file"/>
                    <field name="file"/>
                </sheet>
            </form>

        </field>
    </record>

   <!-- Kanvan View-->
    <record id="sumex_photostock_manuales_kanban_view" model="ir.ui.view">
        <field name="name">sumex_photostock_manuales_form_kanban</field>
        <field name="model">sumex.photostock_manuales</field>
        <field name="groups_id" eval="[(6, 0, [ref('odoo14_sumex_apps_photostock.module_photostock_admin') ])]"/>
        <field name="arch" type="xml">

            <kanban>
                <field name="name"/>
                <field name="file"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">

                                <field name="name"/><br/>
                                <field name="file"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>

        </field>

    </record>


</odoo>
