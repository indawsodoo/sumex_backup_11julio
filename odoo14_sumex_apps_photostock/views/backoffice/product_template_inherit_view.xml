<?xml version="1.0"?>
<odoo>


<!--

añadir un groups a cada vista

-->

    <!-- Inherit in tree view PRODUCT -->
    <record id="product_template_photostock_fields_tree_inherit" model="ir.ui.view">
        <field name="name">sumex_product_template_photostock_tree_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
        <data>

            <field name="categ_id" position="after">
                <field name="photostock_include" readonly="1" optional="hide"/>
            </field>

        </data>
        </field>
    </record>

    <!-- Inherit in form view PRODUCT -->
    <record id="product_template_photostock_fields_form_inherit" model="ir.ui.view">
        <field name="name">product_template_photostock_fields_form_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
        <data>

            <field name="categ_id" position="after">
                <field name="photostock_include" on_change="1" can_create="true" can_write="true"/>
            </field>

            <xpath expr="/form/sheet/notebook" position="inside">
                <page name="photostock" string="Photostock" attrs="{'invisible': [('photostock_include','!=',True)]}">
                    
                    <form>

                        <group col="1" string="Photostock Manuales">
                            <field name="photostock_manual_ids" context="{'default_name': name}" mode="kanban" options="{'create_text':'Añadir Manual a este producto de Photostock'}" nolabel="1"/>
                        </group> 

                        <group col="1" string="Photostock Certificados">
                            <field name="photostock_certificado_ids" context="{'default_name': name}" mode="kanban" options="{'create_text':'Añadir Certificado a este producto de Photostock'}" nolabel="1"/>
                        </group>  

                        <group col="1" string="Photostock Galería">
                            <field name="photostock_product_template_image_ids" class="o_website_sale_image_list" context="{'default_name': name}" mode="kanban" options="{'create_text':'Añadir foto a este producto de Photostock'}" nolabel="1"/>
                        </group>

                        <group>
                            <field name="photostock_marca_id"/>
                            <field name="photostock_categoria_id"/>
                            <field name="photostock_catalogo_pagina"/>
                            <field name="photostock_homologaciones"/>
                            <field name="photostock_proveedor"/>
                            <field name="photostock_fabricado_en"/>
                            <field name="photostock_material_producto"/>
                            <field name="photostock_color"/>
                            <field name="photostock_tipo_packaging"/>
                            <field name="photostock_medidas_packaging_cm"/>
                            <field name="photostock_peso_packaging_kg"/>
                            <field name="photostock_medidas_producto_cm"/>
                            <field name="photostock_peso_producto_kg"/>
                            <field name="photostock_cantidad_master_box"/>
                            <field name="photostock_medidas_master_box_cm"/>
                            <field name="photostock_peso_bruto_master_kg"/>
                            <field name="photostock_peso_neto_master_kg"/>
                            <field name="photostock_volumen_master_box_m3"/>
                            <field name="photostock_cantidad_inner_box"/>
                            <field name="photostock_medidas_inner_box_cm"/>
                            <field name="photostock_peso_bruto_inner_kg"/>
                            <field name="photostock_peso_neto_inner_kg"/>
                            <field name="photostock_volumen_inner_box_m3"/>
                            <field name="photostock_imagen_num_defecto"/>
                            <field name="photostock_disponible_en_region_espana"/>
                            <field name="photostock_disponible_en_region_portugal"/>
                            <field name="photostock_disponible_en_region_francia"/>
                            <field name="photostock_disponible_en_region_europa"/>
                            <field name="photostock_disponible_en_region_usa"/>
                        </group>

                    </form>
                </page>
            </xpath>

        </data>
        </field>
    </record>

    <!--To-Do Task Search view -->
    <record id="product_template_photostock_fields_filter_inherit" model="ir.ui.view">
        <field name="name">sumex_product_template_photostock_filter_inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">

        <search>

            <filter string="PhotoStock - SÍ" name="photostock_include_yes" domain="[('photostock_include','=','1')]"/>
            <filter string="PhotoStock - NO" name="photostock_include_no" domain="[('photostock_include','!=','1')]"/>

            <filter string="PhotoStock Manuales- SÍ" name="photostock_manual_ids_yes" domain="[('photostock_manual_ids','!=',False)]"/>
            <filter string="PhotoStock Manuales - NO" name="photostock_manual_ids_no" domain="[('photostock_manual_ids','=',False)]"/>

            <filter string="PhotoStock Certificados- SÍ" name="photostock_certificado_ids_yes" domain="[('photostock_include','!=',False)]"/>
            <filter string="PhotoStock Certificados - NO" name="photostock_certificado_ids_no" domain="[('photostock_certificado_ids','=',False)]"/>

            <group expand="0" string="Group By">
                <filter string="PhotoStock Marca" name="photostock_marca_id" context="{'group_by': 'photostock_marca_id'}"></filter>
                <filter string="PhotoStock Categoría" name="photostock_categoria_id" context="{'group_by': 'photostock_categoria_id'}"></filter>
            </group>
        
        </search>

        </field>
    </record>

</odoo>
