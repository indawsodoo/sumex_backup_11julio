<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherit_sumex_view_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sumex.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="check_price_line" invisible="1"/>
            </xpath>
            <xpath expr="//group[@name='note_group']" position="before">
                <group name="note_group_onchenge_price" class="mt-2 mt-md-0">
                    <group>
                        <field name="show_warnning" invisible="1"/>
                        <field name="email_sent" invisible="1"/>
                        <field name="onchange_price" readonly="1" attrs="{'invisible': [('show_warnning', '=', False)], 'required': [('show_warnning', '=', True)]}"/>
                        <field name="explanation_onchange_price" attrs="{'invisible': [('show_warnning', '=', False)], 'required': [('show_warnning', '=', True)]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
