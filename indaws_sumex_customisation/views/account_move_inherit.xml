<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_inherit_indaws_view" model="ir.ui.view">
            <field name="name">account.move.inherit.indaws.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="statusfacturado"/>
                </xpath>
                <xpath expr="//page[@name='other_info']//field[@name='ref']" position="after">
                    <label for="ejercicioalbaran" string="EjercicioAlbaran"/>
                    <field name="ejercicioalbaran" nolabel="1"/>
                    <label for="seriealbaran" string="SerieAlbaran"/>
                    <field name="seriealbaran" nolabel="1"/>
                </xpath>
                <xpath expr="//page[@name='other_info']//group[@name='accounting_info_group']//field[@name='invoice_incoterm_id']"
                       position="after">
                    <label for="ejercicioalbaran" string="EjercicioAlbaran"/>
                    <field name="ejercicioalbaran" nolabel="1"/>
                    <label for="seriealbaran" string="SerieAlbaran"/>
                    <field name="seriealbaran" nolabel="1"/>
                </xpath>
                <xpath expr="//page[@id='invoice_tab']//field[@name='invoice_line_ids']//field[@name='quantity']"
                       position="after">
                    <field name="quantity_2"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
