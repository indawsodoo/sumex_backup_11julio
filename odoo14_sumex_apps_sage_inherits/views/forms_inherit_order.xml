<odoo>

    <record id="sumex_apps_sage_inherits_view_inherit_order_search" model="ir.ui.view">
        <field name="name">sumex_apps_sage_inherits_view_inherit_order_search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="From import CSV of Sage - SÍ" name="_created_from_sumex_apps_imports_csv_of_sage_ventas_yes" domain="[('_created_from_sumex_apps_imports_csv_of_sage_ventas','!=',False)]"/>
                <filter string="From import CSV of Sage - NO" name="_created_from_sumex_apps_imports_csv_of_sage_ventas_no" domain="[('_created_from_sumex_apps_imports_csv_of_sage_ventas','=',False)]"/>
                <filter string="Sage Número pedido - SÍ Existe" name="_sage_field_numeropedido_si_existe" domain="[('_sage_field_numeropedido','!=',False)]"/>
                <filter string="Sage Número pedido - NO Existe" name="_sage_field_numeropedido_no_existe" domain="[('_sage_field_numeropedido','=',False)]"/>
                <!-- <separator string="Description" /> -->
                <field string="SAGE Número pedido" name="_sage_field_numeropedido" filter_domain="[('_sage_field_numeropedido','ilike',self)]"/>
            </xpath>
        </field>
    </record>

    <record id="sumex_apps_sage_inherits_view_inherit_order_tree" model="ir.ui.view">
        <field name="name">sumex_apps_sage_inherits_view_inherit_order_tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree"/>
        <field name="arch" type="xml">

            <field name='state' position="after">
                <field name="_created_from_sumex_apps_imports_csv_of_sage_ventas" readonly="1" optional="hide"/>
            </field>

        </field>
    </record>

